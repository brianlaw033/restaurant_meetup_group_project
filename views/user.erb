      <input class="col-sm-4" type="text" name="name" value="<%= @user.name()%>" placeholder="<%= @user.name()%>">
    </div>
    <div class="form-group">
      <label class="col-sm-1" for="username">Username:</label>
      <input class="col-sm-4" type="text" name="username" value="<%= @user.username()%>" placeholder="<%= @user.username()%>">
    </div>
    <div class="form-group">
      <label class="col-sm-1" for="password">Password:</label>
      <input class="col-sm-4" type="text" name="password" value="<%= @user.password()%>" placeholder="<%= @user.password()%>">
    </div>
    <div class="form-group">
      <label class="col-sm-1" for="image">Image URL:</label>
      <input class="col-sm-4" type="text" name="image" value="<%= @user.image()%>" placeholder="<%= @user.image()%>">
