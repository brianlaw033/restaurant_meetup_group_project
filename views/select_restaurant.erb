<hr>

<% if @match.matching_restaurants.length>0%>
  <h3> According to your preferences you should try: </h3>
  <ul>
  <%@restaurants.each() do |restaurant|%>
    <div id="restaurant-tile" class="col-xs-6 col-sm-6">
      <div class="thumbnail">
        <img style="height: 80px" src="<%=restaurant.image%>">
        <div class="caption">
          <h5><%=restaurant.name()%></h5>
        </div>
      </div>
    </div>
  <%end%>
  </ul>
<%end%>
